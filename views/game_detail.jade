extend layout

block content
  h1= title

  if session.hp < 1
    img(src='#{session.job.avatar_dead}', class='battle dead player', data-hp='#{session.hp}')
  else
    img(src='#{session.job.avatar_alive}', class='battle alive player', data-hp='#{session.hp}')
    img(src='#{enemy.avatar_alive}', class='battle alive enemy', data-enemy='#{enemy.name}', data-hp='#{enemy.hp}')
    img(src='/actions/pow.gif', class='action')

    ol.tools(data-level='#{level}')
      - for(var name in session.tools) {
        li(data-tool='#{session.tools[name].name}')
          img(src='/tools/#{session.tools[name].name}.png')
      - }

  if session.hp > 0
    p(class='battle-message')= message
  else
    p(class='battle-message') Uh oh you are too ill to fight! :(

  ol.stats
    li#hp HP
      span= session.hp
    li#mp MP
      span= session.mp
    li#damage Damage
      span
    li#enemy-hp Enemy HP
      span= enemy.hp
    li#xp XP
      span= session.xp
    li#gold Gold
      span= session.gold

  #ship
    .message
      p Return to homebase!
    a(href='/dashboard') Dashboard
