extend layout

block content
  h1= title

  .stats
    h2 Current Stats

    ol
      li
        h3 Level
        span= session.level
        if session.job
          a(href='/preview/' + session.level, class='button') Go battle!
      li
        h3 HP
        span= session.hp
      li
        h3 Gold
        span= session.gold
      li
        h3 Job
        span
          if session.job
            = session.job.name
          else
            a(href='/job', class='button') Set a job
