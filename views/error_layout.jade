!!! 5
html
  head
    title NoodleRPG
    meta(content='chrome=1', http-equiv='X-UA-Compatible')
    link(rel='shortcut icon', href='/images/favicon.png')
    link(rel='stylesheet', href='/stylesheets/main.css')

  body(class='error')
    .wrapper
      #header
        a.logo(href='/')

      block content

      #ship
        if session.email
          .message
            p Return to homebase!
          a(href='/dashboard') Dashboard
        else
          .message
            p Log into your ship now!
          form(method='post', action='/login', id='login-form')
            a(href='#', id='login') Sign in
            input(type='hidden', name='bid_assertion', value='1')

    #footer

    script(src='https://browserid.org/include.js', type='text/javascript')
    script(src='/javascripts/require.js', data-main='/javascripts/main');
